<Window x:Class="NewYearGarlandGuide.GuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Инструкция" 
        WindowState="Maximized" 
        WindowStyle="None"
        Background="#0A0A14"
        Foreground="#E0E0FF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="6" Background="#1A1A2E">
            <Rectangle x:Name="ProgressFill" Fill="#00FF88" HorizontalAlignment="Left" Width="0">
                <Rectangle.Effect>
                    <DropShadowEffect Color="#6CE5FF" BlurRadius="10" ShadowDepth="0"/>
                </Rectangle.Effect>
            </Rectangle>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,30,0,10">
            <TextBlock x:Name="StepNumberText" Text="ШАГ 1 ИЗ 5" FontSize="18" Foreground="#FFD700" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="StepTitleText" Text="Заголовок шага" FontSize="32" Foreground="#6CE5FF" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <Border Grid.Row="2" Margin="100,10" Background="#000000" CornerRadius="20" BorderBrush="#3A3AFF" BorderThickness="2">
            <Image x:Name="StepImage" Stretch="Uniform" Margin="10"/>
        </Border>

        <Border Grid.Row="3" Background="#1A1A2E" HorizontalAlignment="Center" Width="800" CornerRadius="15" Padding="30,20" Margin="0,20" BorderBrush="#3A3AFF" BorderThickness="1">
            <TextBlock x:Name="StepDescriptionText" FontSize="20" Foreground="White" TextWrapping="Wrap" TextAlignment="Center"/>
        </Border>

        <Grid Grid.Row="4" Margin="100,0,100,40">
            <Button x:Name="BackButton" Content="⬅ НАЗАД" HorizontalAlignment="Left" Width="180" Height="60" Click="Prev_Click" Background="#3A3A6A" Foreground="White" FontSize="18">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#6A6AFF" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="ВЕРНУТЬСЯ В МЕНЮ" HorizontalAlignment="Center" Background="Transparent" Foreground="#A0A0FF" BorderThickness="0" Click="Exit_Click" FontSize="16" Cursor="Hand"/>

            <Button x:Name="NextButton" Content="ДАЛЕЕ ➡" HorizontalAlignment="Right" Width="180" Height="60" Click="Next_Click" Background="#006644" Foreground="White" FontWeight="Bold" FontSize="18">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#00FF88" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>